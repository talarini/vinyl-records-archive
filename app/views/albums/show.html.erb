<p>
<strong>Nome:</strong>
<%= @album.name %>
</p>
<p>
<strong>Banda:</strong>
<%= @album.band.name %>
<br>
<strong>Artistas participantes:</strong>
<%= @album.band.artist %>
</p>

<% unless @album.details.empty? %>
  <p>
  <strong>Detalhes:</strong>
  <%= @album.details %>
  </p>
<% end %>

<%= link_to 'Edit', edit_album_path(@album) %>
<%= link_to 'Delete', album_path(@album), method: :delete, data: { confirm: 'Sure?' } %>
<%= link_to 'Back', root_url %>
